@model List<KalendarzWydarzenRodzinnych.Models.WpisZdjecia>



@{
    ViewBag.Title = "Usuń zdjęcia";
}

<h2>Usuń zdjęcia</h2>

<h3>Czy napewno chcesz usunąć wybrane zdjęcia?</h3>
<div>



    @using (Html.BeginForm("DeleteFoto", "Wpis", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
           
            <hr />
            <div class="form-group">
                @foreach (var item in Model)
                {
                 
                    <input name="checkbox" multiple="multiple" type="number" hidden="hidden" value="@item.id" id="checkbox" />
                    <div class="col-md-4">
                        <div>
                            <a href="~/Image/orginal/@item.zdjecie" data-toggle="lightbox" data-gallery="gallery">
                                <img class="list-group-item imgmargin" src="~/Image/thumb/@item.zdjecie" />
                            </a>

                        </div>

                    </div>
                }
            </div>
            <div class="form-group">

                <input type="submit" value="Usuń" class="btn btn-danger" />
               
                <button type="reset" class="btn btn-default" onclick="goBack()">Powrót do edycji wpisu</button>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/ekko")

    <script>
        function goBack() {
            window.history.back();
        }
    </script>
}