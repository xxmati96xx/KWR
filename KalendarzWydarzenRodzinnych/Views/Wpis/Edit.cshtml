@model KalendarzWydarzenRodzinnych.Models.Wpis

@{
    ViewBag.Title = "Edycja wpisu";
}

<h2>Edytuj wpis</h2>
@using (Html.BeginForm("Edit", "Wpis"))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Wpis</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)
    @Html.HiddenFor(model => model.id_wydarzenie)
    @Html.HiddenFor(model => model.id_przebieg)
    @Html.HiddenFor(model => model.Tytul)
    @Html.HiddenFor(model => model.id_uzytkownik)
    @Html.HiddenFor(model => model.data_dodania)


    <div class="form-group">
        @Html.LabelFor(model => model.Relacja, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Relacja, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Relacja, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Dodaj" class="btn btn-primary" />
            @if (Model.id_wydarzenie > 0)
            {

                @Html.ActionLink("Anuluj i do poprawy opsługi powrotu z Wpis i inaczej z Przebieg model", "List", new { id = Model.id_wydarzenie }, new { @class = "btn btn-default" })
            }
            else
            {
                if (ViewBag.id_przebieg > 0)
                {
                @Html.ActionLink("Anuluj i do przebiegu", "List","Przebieg", new { id = ViewBag.id_wydarzenie }, new { @class = "btn btn-default" })
                }
                else { 
                @Html.ActionLink("Anuluj i do relacji", "List", new { id = ViewBag.id_wydarzenie }, new { @class = "btn btn-default" })
                    }
            }
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
